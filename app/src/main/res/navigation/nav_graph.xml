<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/DreamCategoryFragment">

    <fragment
        android:id="@+id/DreamCategoryFragment"
        android:name="org.joyfmi.umddictionary.DreamCategoryFragment"
        android:label="@string/dream_category_fragment_label">
        <action
            android:id="@+id/action_DreamCategoryFragment_to_DreamSymbolFragment"
            app:destination="@id/DreamSymbolFragment" />
    </fragment>
    <fragment
        android:id="@+id/DreamSymbolFragment"
        android:name="org.joyfmi.umddictionary.DreamSymbolFragment"
        android:label="@string/dream_symbol_fragment_label"
        tools:layout="@layout/fragment_symbol_list">
        <argument
            android:name="category"
            app:argType="string" />
        <action
            android:id="@+id/action_DreamSymbolFragment_to_DreamDefinitionFragment"
            app:destination="@id/DreamDefinitionFragment" />
    </fragment>
    <fragment
        android:id="@+id/DreamDefinitionFragment"
        android:name="org.joyfmi.umddictionary.DreamDefinitionFragment"
        android:label="fragment_dream_definition"
        tools:layout="@layout/fragment_dream_definition">
        <argument
            android:name="symbol"
            app:argType="string" />
    </fragment>
</navigation>